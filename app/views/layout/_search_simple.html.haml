#header
  #searchbox
    %img{:src => "/images/w.gif", :id => "logo", :alt => "W logo"}/
    %form.search_bar{:action => "/wiki", :method => "get"}
      - @search_field = CGI::unescape(current_name).force_encoding("UTF-8")
      %input#searchField{:name => "search", :type => "text", :value => @search_field}/
      %input#searchButton{:type =>"image", :src => "/images/s.gif", :alt => go_text}
        %input#submitButton{:type=>"submit"}/

  #nav.nav
    %a#homeButton{:href => "/wiki/::Home"}= language_object["home_button"]
    = " | "
    %a#randomButton{:href => "/wiki/::Random"}= language_object["random_button"]
    %a.arrow{:href => "#footmenu"} End &darr;
