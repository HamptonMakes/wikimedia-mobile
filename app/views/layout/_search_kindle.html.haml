%table#header
  %tr
    %td
      %img{:src => "/images/w.gif", :id => "logo", :alt => "W logo"}/
    %td
      %form.search_bar{:action => "/wiki", :method => "get"}
        %input{:name => "search", :type => "text", :size => "25", :value => CGI::unescape(current_name).force_encoding("UTF-8")}/
        %button{:type => "submit"}= go_text

  %tr
    %td#nav{:colspan => "2"}
      %a{:href => "/wiki/::Home"}= language_object["home_button"]
      |
      %a{:href => "/wiki/::Random"}= language_object["random_button"]
