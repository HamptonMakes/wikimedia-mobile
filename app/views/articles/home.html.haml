= language_notice if !supported_language?

.links
  %button{:type => "button", :onclick => "window.location = '/wiki/::Random'"}= language_object["random_article"]

.logo 
  <img src="/images/logo-en.png" /><br/>

#main_box
  - if @main_page["article_of_the_day"]
    %h2= language_object["featured_article"]
    #featured_article= @main_page["article_of_the_day"]

  - if @main_page["news_items"]
    .today
      %h2= language_object["in_the_news"]
      = @main_page["news_items"]
